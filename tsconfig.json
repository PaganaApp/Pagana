{
	"compilerOptions": {
    "module": "es2020",
		"target": "esnext",
		"lib": ["es2020", "dom.iterable"],
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": false,
		"baseUrl": ".",
		"paths": {
			"$lib/*": ["src/lib/*"]
		}
	},
	"include": [
    "@types",
    "src"
  ]
}
